# Auto detect text files and normalize line endings to LF
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell
*.sh text eol=lf
*.bash text eol=lf

# Windows
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Markdown
*.md text eol=lf
*.markdown text eol=lf

# JSON
*.json text eol=lf
*.jsonl text eol=lf

# Config
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Audio (binary)
*.mp3 binary
*.wav binary
*.m4a binary

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf
